{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES2019.Array",
      "ES2020.Promise"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": ["./lib"]
}